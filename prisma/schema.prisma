generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model UserStatus {
  id          Int                 @id @default(autoincrement())
  key         String              @unique @db.VarChar(50)
  name        String?             @db.VarChar(255)
  createdAt   DateTime            @default(now())
  description String?
  users       User[]
  histories   UserStatusHistory[]
}

model Role {
  id              Int              @id @default(autoincrement())
  key             String           @unique @db.VarChar(100)
  name            String?          @db.VarChar(255)
  createdAt       DateTime         @default(now())
  description     String?
  rolePermissions RolePermission[]
  userRoles       UserRole[]
}

model User {
  id              Int                 @id @default(autoincrement())
  email           String              @unique @db.VarChar(255)
  name            String?             @db.VarChar(255)
  password        String              @db.VarChar(255)
  createdAt       DateTime            @default(now())
  statusId        Int
  updatedAt       DateTime            @updatedAt
  lastLoginAt     DateTime?
  tokenVersion    Int                 @default(0)
  avatar          String?             @db.VarChar(255)
  tokens          RefreshToken[]
  status          UserStatus          @relation(fields: [statusId], references: [id])
  roles           UserRole[]
  statusHistories UserStatusHistory[]
}

model UserRole {
  id         Int      @id @default(autoincrement())
  userId     Int
  assignedAt DateTime @default(now())
  roleId     Int
  role       Role     @relation(fields: [roleId], references: [id], onDelete: Cascade)
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, roleId])
  @@index([userId])
  @@index([roleId])
}

model RefreshToken {
  id                  Int       @id @default(autoincrement())
  userId              Int
  tokenHash           String    @db.VarChar(255)
  expiresAt           DateTime
  revokedAt           DateTime?
  createdAt           DateTime  @default(now())
  replacedByTokenHash String?   @db.VarChar(255)
  user                User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model UserStatusHistory {
  id        Int        @id @default(autoincrement())
  userId    Int
  statusId  Int
  startAt   DateTime   @default(now())
  endAt     DateTime?
  reason    String?
  createdAt DateTime   @default(now())
  status    UserStatus @relation(fields: [statusId], references: [id])
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([statusId])
}

model Test {
  id        Int      @id @default(autoincrement())
  name      String   @db.VarChar(255)
  createdAt DateTime @default(now())
}

model PermissionGroup {
  id          Int          @id @default(autoincrement())
  key         String       @unique @db.VarChar(150)
  name        String?      @db.VarChar(255)
  description String?
  createdAt   DateTime     @default(now())
  permissions Permission[]
}

